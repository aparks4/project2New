<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/index.css">
    <title>Trip Index</title>
</head>
<body>
    <img class="DBlogo" src="https://i.imgur.com/cBxeHWy.png" alt="DB logo">
    <%- include('partials/nav') %>
    

    <div>
        <h2>EXPLORE</h2>
    </div>
    <div class = 'view-by'> 
    <a href="/trips">View By Trip</a> <a href="/trips/city">View By City</a>
    </div>
    <div class="trips-container">
        <% for(let i = 0; i < cities.length; i++) { %>
            <% const firstCity = cities[i] %>
            <p class="city-name"><%=firstCity.city%></p>
           <% for(let j = 0; j < cities[i].tripName.length; j++){%>
            <%const firstTrip = cities[i].tripName[j]%>

            <a class='trip-name'href="/trips/<%= cities[i].tripId[j] %>"><%=firstTrip%>-</a>
            
          <% } %>
          
        <% } %>
    </div>
</body>
</html>