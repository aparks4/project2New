<body>
   
  
        
        <img class="DBlogo" src="https://i.imgur.com/cBxeHWy.png" alt="DB logo"> 
        <%- include('partials/nav') %>

   
   <div>
    <h2>EXPLORE</h2>
</div>
   <div class = 'view-by'> 
    <a href="/trips">View By Trip</a>|<a href="/trips/city">View By City</a>
    </div>

    <div class="container">
        <div class="photos-1">
        
            <img src="https://images.unsplash.com/photo-1530789253388-582c481c54b0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80">
