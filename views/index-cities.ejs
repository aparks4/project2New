        </div>
    
    <div class="trips-container">
        <% for(let i = 0; i < cities.length; i++) { %>
            <% const firstCity = cities[i] %>
            <p class="city-name"><%=firstCity.city%></p>
           <% for(let j = 0; j < cities[i].tripName.length; j++){%>
            <%const firstTrip = cities[i].tripName[j]%>

            <a class='trip-name'href="/trips/<%= cities[i].tripId[j] %>"><%=firstTrip%></a>
            
          <% } %>
          
        <% } %>
    </div>
    
    <div class="photos-2">
        <img src="https://images.unsplash.com/photo-1506197603052-3cc9c3a201bd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
            <img src="https://images.unsplash.com/photo-1640983097853-0dbc4f0ff318?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80">
